<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/radius_shape"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/lifetimer_logo__2_" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/poppins"
                android:letterSpacing="0.1"
                android:text="LIFETIMER"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="160dp"
                android:lineSpacingExtra="3dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:text="Bienvenido a LifeTimer. Aqui podras conocer tu edad especifica en tan solo unos clicks." />

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:background="@drawable/radius_shape_trasfond"
                android:orientation="horizontal"
                android:elevation="2dp">

                <ImageView
                    android:background="@drawable/radius_shape_trasfond"
                    android:id="@+id/imageView"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/watch"
                    android:clipToOutline="true"
                    android:elevation="2dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:elevation="2dp"
                android:gravity="center"
                android:background="@drawable/radius_shape">

                <TextView
                    android:id="@+id/textView"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="TIP DIARIO"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:background="@drawable/radius_shape_trasfond"
                android:elevation="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_shape_trasfond"
                    android:clipToOutline="true"
                    android:elevation="2dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/apple" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="160dp"
                android:lineSpacingExtra="3dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Para prolongar tu vida, sigue una dieta sana y equilibrada, rica en frutas y verduras." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:background="@drawable/radius_shape">

                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/textView5"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="Introduce tu nombre:"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="200dp"
                android:layout_marginLeft="18dp"
                android:layout_height="40dp"
                android:background="@drawable/radius_shape_white"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:gravity="center">
                <EditText
                    android:paddingTop="5dp"
                    android:background="@null"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:textSize="15dp"
                    android:hint="Nombre..."
                    android:textColorHint="#C9C9C9"
                    android:textColor="@color/black"
                    android:inputType="text"></EditText>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:background="@drawable/radius_shape">

                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/textView6"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="Introduce tu fecha de nacimiento:"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_marginLeft="18dp"
                android:layout_height="40dp"
                android:background="@drawable/radius_shape_white"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:gravity="center">
                <EditText
                    android:id="@+id/dateText"
                    android:paddingTop="5dp"
                    android:background="@null"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:textSize="15dp"
                    android:hint="Fecha de nacimiento..."
                    android:textColor="@color/black"
                    android:textColorHint="#C9C9C9"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"></EditText>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:background="@drawable/radius_shape">

                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/textView7"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="Presiona el botÃ³n para continuar"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center_vertical">


            <Button
                android:layout_width="200dp"
                android:layout_marginLeft="18dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_button"
                android:elevation="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:text="CONOCER MI EDAD"
                android:textStyle="bold">
            </Button>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>